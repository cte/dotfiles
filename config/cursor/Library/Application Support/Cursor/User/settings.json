{
  "editor.accessibilitySupport": "off",
  "editor.cursorBlinking": "smooth",
  "editor.cursorSmoothCaretAnimation": "on",
  "editor.rulers": [80, 120],
  "editor.inlineSuggest.enabled": true,

  "editor.fontFamily": "NotoSansM Nerd Font Mono",
  "editor.fontSize": 14,
  // "editor.fontFamily": "Monaspace Neon Var",
  // "editor.fontSize": 16,
  // "editor.fontVariations": "'wght' 300",
  // "editor.fontLigatures": "'calt', 'liga', 'ss03', 'ss04', 'ss06'",

  "terminal.integrated.fontFamily": "NotoSansM Nerd Font Mono",
  "terminal.integrated.fontSize": 14,
  "terminal.integrated.inheritEnv": false,
  "terminal.integrated.defaultProfile.osx": "zsh",

  "files.autoSave": "onFocusChange",

  "security.workspace.trust.untrustedFiles": "open",

  "git.autofetch": true,

  "diffEditor.ignoreTrimWhitespace": false,
  "diffEditor.useInlineViewWhenSpaceIsLimited": false,

  "workbench.colorTheme": "One Hunter Theme",
  "workbench.iconTheme": "catppuccin-macchiato",

  "window.zoomLevel": 1,

  "catppuccin.italicKeywords": false,
  "catppuccin.italicComments": false,
  "catppuccin.accentColor": "peach",

  "roo-cline.allowedCommands": [
    "npm test",
    "npm install",
    "tsc",
    "git log",
    "git diff",
    "git show"
  ],

  "[typescriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[jsonc]": {
    "editor.defaultFormatter": "vscode.json-language-features"
  },
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
}

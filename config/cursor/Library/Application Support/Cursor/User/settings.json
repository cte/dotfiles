{
  "editor.accessibilitySupport": "off",
  "editor.cursorBlinking": "smooth",
  "editor.cursorSmoothCaretAnimation": "on",
  "editor.rulers": [80, 120],
  "editor.inlineSuggest.enabled": true,

  // "editor.fontFamily": "NotoSansM Nerd Font Mono",
  // "editor.fontFamily": "Monaspace Neon Var",
  // "editor.fontFamily": "JetBrainsMono Nerd Font Mono",
  // "editor.fontFamily": "VictorMono Nerd Font Mono",
  // "editor.fontFamily": "OverpassM Nerd Font",
  // "editor.fontFamily": "BlexMono Nerd Font",
  // "editor.fontFamily": "Lilex Nerd Font",
  // "editor.fontFamily": "MartianMono Nerd Font",
  "editor.fontFamily": "RobotoMono Nerd Font",
  "editor.fontSize": 13,
  // "editor.fontWeight": "400",
  // "editor.fontVariations": "'wght' 250",
  // "editor.fontLigatures": "'calt', 'liga', 'ss03', 'ss04', 'ss06'",

  "editor.tokenColorCustomizations": {
    "textMateRules": [
      {
        "scope": [
          "comment",
          "comment.line.double-slash",
          "comment.block.documentation",
          "punctuation.definition.comment",
          "variable.parameter"
        ],
        "settings": {
          "fontStyle": ""
        }
      }
    ]
  },

  "editor.minimap.enabled": true,

  "terminal.integrated.fontFamily": "GeistMono Nerd Font Mono",
  // "terminal.integrated.fontFamily": "JetBrainsMono Nerd Font Mono",
  "terminal.integrated.fontSize": 12,
  "terminal.integrated.inheritEnv": false,
  "terminal.integrated.defaultProfile.osx": "zsh",

  "files.autoSave": "onFocusChange",

  "security.workspace.trust.untrustedFiles": "open",

  "git.autofetch": true,

  "diffEditor.ignoreTrimWhitespace": false,
  "diffEditor.useInlineViewWhenSpaceIsLimited": false,

  "window.zoomLevel": 2,

  "workbench.navigationControl.enabled": false,
  "workbench.iconTheme": "bearded-icons",
  "workbench.colorTheme": "Bearded Theme Altica",

  "[typescriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[html]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },

  "roo-code-nightly.allowedCommands": ["*"],
  "roo-code-nightly.deniedCommands": [],
  "roo-code-nightly.debug": false,

  "roo-cline.allowedCommands": ["*"],
  "roo-cline.deniedCommands": [],
  "roo-cline.debug": false,

  "claudeCode.preferredLocation": "sidebar",
  "claudeCode.allowDangerouslySkipPermissions": true,
  "claudeCode.initialPermissionMode": "bypassPermissions",
  "claudeCode.selectedModel": "default"
}

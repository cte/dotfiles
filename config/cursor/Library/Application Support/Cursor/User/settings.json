{
  "editor.accessibilitySupport": "off",
  "editor.cursorBlinking": "smooth",
  "editor.cursorSmoothCaretAnimation": "on",
  "editor.rulers": [80, 120],
  "editor.inlineSuggest.enabled": true,

  "editor.fontFamily": "Monaspace Neon Var",
  "editor.fontSize": 16,
  "editor.fontVariations": "'wght' 300",
  "editor.fontLigatures": "'calt', 'liga', 'ss03', 'ss04', 'ss06'",

  "terminal.integrated.fontFamily": "NotoSansM Nerd Font Mono",
  "terminal.integrated.fontSize": 12,
  "terminal.integrated.inheritEnv": false,

  "files.autoSave": "onFocusChange",

  "security.workspace.trust.untrustedFiles": "open",

  "git.autofetch": true,

  "diffEditor.ignoreTrimWhitespace": false,
  "diffEditor.useInlineViewWhenSpaceIsLimited": false,

  "workbench.colorTheme": "Catppuccin Macchiato",
  "workbench.iconTheme": "catppuccin-macchiato",

  "catppuccin.italicKeywords": false,
  "catppuccin.italicComments": false,
  "catppuccin.accentColor": "peach",
}

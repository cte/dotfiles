{
  "editor.accessibilitySupport": "off",
  "editor.cursorBlinking": "smooth",
  "editor.cursorSmoothCaretAnimation": "on",
  "editor.rulers": [80, 120],
  "editor.inlineSuggest.enabled": true,

  "editor.fontFamily": "NotoSansM Nerd Font Mono",
  "editor.fontSize": 11,
  // "editor.fontVariations": "'wght' 300",
  // "editor.fontLigatures": "'calt', 'liga', 'ss03', 'ss04', 'ss06'",

  "terminal.integrated.fontFamily": "SpaceMono Nerd Font",
  "terminal.integrated.fontSize": 11,
  "terminal.integrated.inheritEnv": false,
  "terminal.integrated.defaultProfile.linux": "zsh",

  "files.autoSave": "onFocusChange",

  "security.workspace.trust.untrustedFiles": "open",

  "git.autofetch": true,

  "diffEditor.ignoreTrimWhitespace": false,
  "diffEditor.useInlineViewWhenSpaceIsLimited": false,

  "window.titleBarStyle": "custom",
  "window.menuBarVisibility": "compact",

  "workbench.navigationControl.enabled": false,
  "workbench.statusBar.visible": false,
  "workbench.colorTheme": "One Hunter Theme",
  "workbench.iconTheme": "symbols",

  "chat.commandCenter.enabled": false,

  "roo-cline.allowedCommands": [
    "*"
  ],
}


#!/usr/bin/env bash

# cp ~/dotfiles/sync-dotfiles ~/.local/bin

# cava
/run/current-system/sw/bin/cp -vf ~/.config/cava/config ~/dotfiles/config/cava

# hyprland
/run/current-system/sw/bin/cp -vf ~/.config/hypr/*.conf ~/dotfiles/config/hypr

# hyprpanel
/run/current-system/sw/bin/cp -vf ~/.config/hyprpanel/config.json ~/dotfiles/config/hyprpanel

# kitty
/run/current-system/sw/bin/cp -vf ~/.config/kitty/*.conf ~/dotfiles/config/kitty

# rofi
/run/current-system/sw/bin/cp -vf ~/.config/rofi/config.rasi ~/dotfiles/config/rofi
/run/current-system/sw/bin/cp -vfr ~/.local/share/rofi ~/dotfiles/config/rofi

# starship
/run/current-system/sw/bin/cp -vf ~/.config/starship.toml ~/dotfiles/config/starship

# vscode
/run/current-system/sw/bin/cp -vf ~/.config/Code/User/settings.json ~/dotfiles/config/Code/User
